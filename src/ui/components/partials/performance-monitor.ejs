<!-- Performance Monitor Component -->
<div id="performance-monitor" class="mt-3" style="display: none;">
    <div class="card border-info">
        <div class="card-header bg-info text-white">
            <small><i class="fas fa-tachometer-alt me-1"></i>Performance Monitor</small>
        </div>
        <div class="card-body p-2">
            <div class="row text-center">
                <div class="col-3">
                    <small class="text-muted">API Time</small>
                    <div id="api-time" class="fw-bold">-</div>
                </div>
                <div class="col-3">
                    <small class="text-muted">AI Time</small>
                    <div id="ai-time" class="fw-bold">-</div>
                </div>
                <div class="col-3">
                    <small class="text-muted">Cache Hit</small>
                    <div id="cache-status" class="fw-bold">-</div>
                </div>
                <div class="col-3">
                    <small class="text-muted">Total</small>
                    <div id="total-time" class="fw-bold">-</div>
                </div>
            </div>
        </div>
    </div>
</div>
