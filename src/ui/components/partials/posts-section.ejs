<!-- Posts Section Component -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5><i class="fas fa-newspaper me-2"></i>Recent Posts & Comments</h5>
                <div class="btn-group">
                    <button id="refresh-posts" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-sync-alt me-1"></i>Refresh
                    </button>
                    <button id="toggle-performance" class="btn btn-outline-info btn-sm" title="Toggle Performance Monitor">
                        <i class="fas fa-tachometer-alt"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div id="posts-container">
                    <div class="text-center p-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-3 mb-1">Loading posts...</p>
                        <small class="text-muted">Click on posts to view comments</small>
                    </div>
                </div>

                <!-- Performance Monitor (Debug) -->
                <%- include('performance-monitor') %>
            </div>
        </div>
    </div>
</div>
